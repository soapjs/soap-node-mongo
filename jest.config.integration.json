{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "clearMocks": true,
  "collectCoverage": false,
  "testMatch": ["**/__tests__/integration/**/*.test.ts"],
  "testTimeout": 30000,
  "setupFilesAfterEnv": ["<rootDir>/src/__tests__/integration/setup.ts"],
  "testPathIgnorePatterns": ["/node_modules/", "/build/"],
  "verbose": true,
  "globals": {
    "ts-jest": {
      "tsconfig": {
        "target": "ES2020"
      }
    }
  }
}
